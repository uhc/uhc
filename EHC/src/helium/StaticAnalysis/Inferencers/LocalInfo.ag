-- (Non-terminals above) Declarations                                          
                                                                                                                        
SEM Body
  | Body  
       loc . declInfo = LocalInfo { self = UHA_Decls @declarations.self
                                  , assignedType = Nothing 
                                  , monos = @lhs.monos
                                  }
SEM MaybeDeclarations 
  | Just  
       loc . declInfo = LocalInfo { self = UHA_Decls @declarations.self
                                  , assignedType = Nothing 
                                  , monos = @lhs.monos
                                  }  
SEM Expression 
  | Let   
       loc . declInfo = LocalInfo { self = UHA_Decls @declarations.self
                                  , assignedType = Nothing 
                                  , monos = @lhs.monos
                                  }  
SEM Statement
  | Let   
       loc . declInfo = LocalInfo { self = UHA_Decls @declarations.self
