%%[(8 codegen) hs
mkTrf :: Bool -> Int -> Int -> HsName -> MetaVal -> Expr -> (Expr,LevBindSq)
mkTrf cond outerLev hereLev n m e
  =  if cond
     then (Expr_Var n,Seq.singleton (hereLev,(ValBindCateg_Plain,[mkValBind1Meta n m e])))
     else (e,Seq.empty)
%%]

%%[(8 codegen) hs
mkLetTrf' :: LevBindSq -> Expr -> (Bool,Expr)
mkLetTrf' bs ce
  =  let  l = Seq.toList bs
     in   (not (List.null l),foldr (\(_,(c,b)) e -> mkExprLet c b e) ce l)

mkLetTrf :: LevBindSq -> Expr -> Expr
mkLetTrf bs ce = snd (mkLetTrf' bs ce)
%%]

