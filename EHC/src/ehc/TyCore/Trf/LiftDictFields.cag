%%[(9 codegen) hs

fix :: Eq a => (a->a) -> a -> a
fix f x = let y = f x
          in  if y==x 
              then x
              else fix f y


isValBind :: CBind -> Bool
isValBind (CBind_Bind _ (_,MetaVal_Val) _) = True
isValBind _                                 = False

mbMetaPos :: MetaVal -> Maybe Int
mbMetaPos (MetaVal_Dict mbp) = mbp
mbMetaPos _                   = Nothing


mkLam :: (HsName,Int) -> Expr -> Expr
mkLam (nm,p) body = Expr_Lam nm (MetaVal_Dict (Just p)) body

mkLet :: CBind -> Expr -> Expr
mkLet bind body = Expr_Let ValBindCateg_Rec [bind] body

