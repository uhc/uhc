                                                       Just t
                                                         -> let v  =  case t of
                                                                        CTagRec         -> mkGrRecNode argL'
                                                                        CTag _ l t a ma -> mkGrConNode (mkGrTagAnn a ma) t l argL'
                                                            in  wrapGr (mkE v)
                                                       Nothing
                                                         -> let ap = case @mbLam of
                                                                        Just arity
