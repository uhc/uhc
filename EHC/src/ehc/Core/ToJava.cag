%%[(8 codegen java)
ATTR CExpr [ mbLamNm: {Maybe HsName} | | ]

SEM CExpr
  | App Lam     loc         .   mbLamNm     =   Nothing

SEM CAlt
  | Alt         loc         .   mbLamNm     =   Nothing

SEM CBind
  | Bind        expr        .   mbLamNm     =   Just @nm

SEM CPatBind
  | Bind        offset      .   mbLamNm     =   Nothing

SEM CModule
  | Mod         expr        .   mbLamNm     =   Nothing
