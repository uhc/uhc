%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% As args ++ func
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%[(8 codegen java)
ATTR CExpr [ | | jvSrcL: {[PP_Doc]} ]

SEM CExpr
  | App         loc         .   jvSrcL      =   @arg.jvSrc : @func.jvSrcL
  | * - App     lhs         .   jvSrcL      =   [@jvSrc]
%%]

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% As body + args
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%[(8 codegen java)
ATTR CExpr [ | | jvArgL: {[HsName]}  jvBody: PP_Doc ]

SEM CExpr
  | Lam         loc         .   jvArgL      =   @arg : @body.jvArgL
                            .   jvBody      =   @body.jvBody
  | * - Lam     lhs         .   jvArgL      =   []
                            .   jvBody      =   @jvSrc
%%]

