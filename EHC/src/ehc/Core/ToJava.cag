%%[(8 codegen java)
ATTR AllPatBind [ tagSz: Int | | ]
ATTR CPatL CPat AllAlt [ | | tagSz USE {`const`} {0}: Int ]

SEM CPat
  | Con         loc         .   tagSz       =   ctag 0 (\_ _ _ _ _ -> 1) @tag
