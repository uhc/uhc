decrement :: Int -> Int
decrement n = n-1

embedVars :: EHCOpts -> SilModule -> SilModule
embedVars options input   
  = let t = wrap_SilModule (sem_SilModule input)
                           (Inh_SilModule {opts_Inh_SilModule = options})
    in trf_Syn_SilModule t
