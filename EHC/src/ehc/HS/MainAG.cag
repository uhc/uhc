    | * - Constructor
        lhs         .   conNm       =   hsnUnknown

SEM Expression
    | Constructor
        lhs         .   conNm       =   @name
    | * - Constructor
        lhs         .   conNm       =   hsnUnknown
%%]

%%[3
ATTR
  AllType
%%[[9
  AllContextItem
