SEM Expr
  | Let         loc         .   tyKiUpdFreeTvarS    =   setSubst @decls.kiVarMp @lhs.tyKiGlobFreeTvarS
                decls       .   tyKiGlobFreeTvarS   =   ftvSet @tyKiGam_l_ `Set.union` @lhs.tyKiGlobFreeTvarS
                body        .   tyKiGlobFreeTvarS   =   ftvSet @lQuTyKiGam_ex_subst `Set.union` setSubst @bodyTyKiVarMp2 @tyKiUpdFreeTvarS
  | Lam			body		.	tyKiGlobFreeTvarS   =   ftvSet (@arg.kiVarMp |=> gamTop @arg.tyKiGam) `Set.union` @lhs.tyKiGlobFreeTvarS
