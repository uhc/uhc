SEM Decl
  | Instance
  				decls		.	tyKiGlobFreeTvarS   =   ftvSet ({- @decls.kiVarMp |=> -} gamTop @decls.patTyKiGam) `Set.union` @lhs.tyKiGlobFreeTvarS
