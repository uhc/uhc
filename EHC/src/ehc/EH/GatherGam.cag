%%[(20 hmtyinfer)
ATTR AGItf Expr [ | | gathValGam: ValGam ]

SEM Expr
  | Let         lhs         .   gathValGam          =   @body.gathValGam `gamUnion` @finValGamDecls
  | * - Let     lhs         .   gathValGam          =   emptyGam
%%]

